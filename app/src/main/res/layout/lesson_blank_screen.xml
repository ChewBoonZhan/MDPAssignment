<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    >

    <include
        android:id="@+id/lesson_simulation_action_bar"
        layout="@layout/subscreen_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/blank_screen_bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/background_light"
        android:paddingTop="15dp"
        android:paddingBottom="12dp"
        android:text="Go"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/lesson_blank_screen_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingBottom="165dp"
        app:layout_constraintBottom_toTopOf="@+id/blank_screen_bottom_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson_simulation_action_bar"
        app:layout_constraintVertical_bias="0.0">

        <FrameLayout
            android:id="@+id/lesson_simulation_framelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

        </FrameLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>